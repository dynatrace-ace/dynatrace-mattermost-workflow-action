{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "jsx": "react",
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext"
  },
  "include": ["**/*.widget.tsx"]
}
